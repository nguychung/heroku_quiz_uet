  <div class="top-footer-area" style="height: 148px;">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <!-- Footer Logo -->
          <div class="footer-logo">
            <a href="#">
              <h4 style="color:bisque;">Yourtests</h4>
            </a>
