<% include header%>
<div class="container">
  <div><h3 style="text-align: center">Tất cả bài kiểm tra</h3></div>
  <br>
  <div class="row">
  <% tests.forEach(function(test) { %>
    <div class = "col-md-4">
    <div class="row"><a href = <%= 'http://localhost:4000/tests/dotest/' + test.t_id %>><h4 style="text-decoration: underline;"><%= test.t_name %></h4></a></div>
    <div class="row"><i>Ngừời đăng:  </i><a href = <%= 'http://localhost:4000/profile/' + test.u_id %> style="color: blue"><%= test.u_email %></a></i></div>
    <div class="row"><i>Thời gian: </i><%= test.t_time %></i> phút</div>
    <% if (test.t_password) { %>
      <div class="row"><i>Có mật khẩu </i></div>
    <% } else { %>
      <div class="row"><i>Không mật khẩu </i></div>
    <% }%>
  </div>
  <% }) %>
</div>
<br>
</div>
<% include footer%>
